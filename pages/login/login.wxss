/* pages/login/login.wxss */
.login-wrapper {
    padding: 40rpx;
    background: url('http://www.moepan.net/uploads/2017122116330168531888.png') no-repeat; 
    background-size: 100%; 
    font-family: PingFangSC-Regular;
}
.logo-wrap {
    display: flex;
    margin-top: 80rpx;
    margin-bottom: 80rpx; 
    justify-content: center;   /* 水平居中 */
}
.logo {
    width: 370rpx;
    height: 100rpx;
}
.login-content {
    margin-bottom: 40rpx
}
.login-item {
    margin-bottom: 20rpx;
    height: 60rpx;  
    background: #FFFFFF;
    border: 1px solid #D7D7D7;
    border-radius: 6rpx;
    padding: 20rpx;
}
.login-item input{
    height:100%;
    font-size: 28rpx;
    color: #888888;
}
.item-extra input{
    width: 65%;
    float: left;
}
.code-wrap {
    width:30%;
    float:right;
    height:70rpx;
    z-index: 99;
}
.login-btn {
    display:block;
    height:80rpx;
    line-height:80rpx;
    text-align:center;
    border-radius:10rpx;
    font-size:34rpx;
    margin-top:80rpx;
    background:#fc4f3f;
    color:#fff;
}

button{
    border-radius: 6rpx; 
}